                $packingList->Sender_Code = (string)$orderItem->Sender_Code;
                $packingList->Receiver_Name =(string)$orderItem->Receiver_Name;
                $packingList->Receiver_Code = (string)$orderItem->Receiver_Code;
                $packingList->Order = $order->idOrder;
                $packingList->create();
