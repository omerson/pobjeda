    protected function xmlToDb($xml, $user){ 
        $order = new Order();
        $order->User = $user->idUsers;
        $order->create();
        foreach( $xml as $orderItem ) 
        {                                      
            if ($orderItem->getName() == "Packing_List") {                       
                $packingList = new PackingList();    
